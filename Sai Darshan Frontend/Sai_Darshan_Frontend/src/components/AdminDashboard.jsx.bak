function DarshanAdmin({ showNotification }) {
  const [darshans, setDarshans] = useState([]);
  const [slots, setSlots] = useState([]);
  const [showForm, setShowForm] = useState(false);
  const [showSlotForm, setShowSlotForm] = useState(false);
  const [editingItem, setEditingItem] = useState(null);
  const [editingSlot, setEditingSlot] = useState(null);
  const [activeTab, setActiveTab] = useState('types'); // 'types' or 'slots'

  useEffect(() => {
    loadDarshans();
    loadSlots();
  }, []);

  useEffect(() => {
    if (activeTab === 'types') {
      loadDarshans();
    } else if (activeTab === 'slots') {
      loadSlots();
    }
  }, [activeTab]);

  const loadDarshans = async () => {
    try {
      const types = await ApiService.getAllDarshanTypes();
      setDarshans(types);
    } catch (error) {
      console.error('Failed to load darshan types:', error);
    }
  };

  const loadSlots = async () => {
    try {
      const allSlots = await ApiService.getAllDarshanSlots();
      setSlots(allSlots);
    } catch (error) {
      console.error('Failed to load darshan slots:', error);
    }
  };

  const handleSave = async (formData) => {
    try {
      if (editingItem) {
        await ApiService.updateDarshanType(editingItem.id, formData);
        showNotification('Darshan updated successfully!');
      } else {
        await ApiService.createDarshanType(formData);
        showNotification('Darshan added successfully!');
      }
      loadDarshans();
      setShowForm(false);
      setEditingItem(null);
    } catch (error) {
      showNotification('Operation failed!', 'error');
    }
  };

  const handleDelete = async (id) => {
    if (window.confirm('Delete this darshan?')) {
      try {
        await ApiService.deleteDarshanType(id);
        showNotification('Darshan deleted!');
        loadDarshans();
      } catch (error) {
        showNotification('Delete failed!', 'error');
      }
    }
  };

  const handleSaveSlot = async (formData) => {
    try {
      if (editingSlot) {
        await ApiService.updateDarshanSlot(editingSlot.id, formData);
        showNotification('Slot updated successfully!');
      } else {
        await ApiService.createDarshanSlot(formData);
        showNotification('Slot added successfully!');
      }
      loadSlots();
      setShowSlotForm(false);
      setEditingSlot(null);
    } catch (error) {
      showNotification('Operation failed!', 'error');
    }
  };

  const handleDeleteSlot = async (id) => {
    if (window.confirm('Delete this slot?')) {
      try {
        await ApiService.deleteDarshanSlot(id);
        showNotification('Slot deleted!');
        loadSlots();
      } catch (error) {
        showNotification('Delete failed!', 'error');
